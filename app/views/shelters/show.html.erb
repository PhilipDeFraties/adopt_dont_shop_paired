<h2><%= @shelter.name %></h2>
<p>Address: <%= "#{@shelter.address}, #{@shelter.city}, #{@shelter.state}, #{@shelter.zip}" %></p>
<%= link_to 'Shelter Pets', "/shelters/#{@shelter.id}/pets" %>
<%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}", method: :delete %>
<%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit", method: :get %><br>
<%= link_to 'Add a new review', "/shelters/#{@shelter.id}/create_review", method: :get %><br>

<h3>Reviews</h3>
  <% @shelter.reviews.each do |review| %>
    Title: <%= review.title %><br>
    Rating(out of 5): <%= review.rating %><br>
    Review: <%= review.content %><br>
    <img src=<%= review.image %> />
    <%= link_to 'Edit Review', "/shelters/#{@shelter.id}/edit_review?#{review.id}", method: :get %><br>
  <% end  %>
