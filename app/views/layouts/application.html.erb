<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1 id="site-title">Adopt Don't Shop</h1>
      <nav class="menu">
        <%= link_to 'Pets', '/pets' %>
        <%= link_to 'Shelters', '/shelters' %>
        <% if session[:favorites] %>
          <%= link_to "Favorite Pet Count: #{session[:favorites].count}", '/favorites' %>
        <% else %>
          <%= link_to "Favorite Pet Count: 0", '/favorites' %>
        <% end %>
      </nav>
    </header>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
